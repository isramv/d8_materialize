<nav class="top-nav">
  <div class="container">
    <div class="row l-header">
      {% if page.header_left %}
        <div class="col s12 m6 l6">
          {{ page.header_left }}
        </div>
      {% endif %}
      {% if page.header_right %}
        <div class="col s12 m6 l6">
          {{ page.header_right }}
        </div>
      {% endif %}
    </div>
    {% if page.navigation %}
      <div class="row l-navigation">
        <div class="col s12 m12 l12">
          {{ page.navigation }}
        </div>
      </div>
    {% endif %}
  </div>
</nav>
<div class="main-content">
  <div class="container">
    {% if page.sidebar and page.content %}
      <div class="row l-content-full">
        <div class="col s12 m3 l3">
          {{ page.sidebar }}
        </div>
        <div class="col s12 m9 l9">
          {{ page.content }}
        </div>
      </div>
    {% endif %}
    {% if page.content and page.sidebar|length == 0 %}
      <div class="row l-content-full">
        <div class="col s12">
          {{ page.content }}
        </div>
      </div>
    {% endif %}
  </div>
</div>
<footer class="page-footer">
  <div class="container">
    <div class="row">
      <div class="col l6 s12">
        {% if page.footer_left %}
          {{ page.footer_left }}
        {% endif %}
      </div>
      <div class="col l6 s12">
        {% if page.footer_right %}
          {{ page.footer_right }}
        {% endif %}
      </div>
    </div>
  </div>
  <div class="footer-copyright">
    <div class="container">
      {% if page.footer_bottom %}
        <div class="row l-footer">
          <div class="col s12">
            {{ page.footer_bottom }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</footer>
